<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MODE1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/UserModeTitle"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="100sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <Button
        android:id="@+id/feed_btn"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/operation_btn_shape"
        android:text="@string/FeedCat"
        android:textAllCaps="false"
        android:textSize="55sp" />



    <Button
        android:id="@+id/shit_btn"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:background="@drawable/operation_btn_shape"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:text="@string/CleanTheLitter"
        android:textAllCaps="false"
        android:textSize="55sp"/>

        <Button
            android:id="@+id/auto_btn"
            android:layout_width="600dp"
            android:layout_height="200dp"
            android:layout_marginLeft="-1225dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/operation_btn_shape"
            android:text="@string/AutoOperate"
            android:textAllCaps="false"
            android:textSize="55sp" />

    <Button
            android:id="@+id/margin_inquiry_btn"
            android:layout_width="600dp"
            android:layout_height="200dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/operation_btn_shape"
            android:text="@string/MarginInquiry"
            android:textAllCaps="false"
            android:textSize="55sp" />

        <TextView
            android:id="@+id/margin_txt"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-600dp"
            android:layout_marginTop="380dp"
            android:hint="@string/MarginValue"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="50sp" />



    </LinearLayout>
</LinearLayout>