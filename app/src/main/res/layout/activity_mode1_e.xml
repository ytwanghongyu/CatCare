<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MODE1E">

    <TextView
        android:id="@+id/control_mode_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Control Mode"
        android:textSize="100sp"
        android:background="#8fa7ff"/>

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/feed_btn_e"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"

        android:background="#ffb87e"
        android:text="Feed the Cat"
        android:textAllCaps="false"
        android:textSize="60sp" />



    <Button
        android:id="@+id/shit_btn_e"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:background="#ffb87e"
        android:layout_gravity="center"
        android:text="Clean up the litter"
        android:textAllCaps="false"
        android:textSize="60sp"

        />
    
</LinearLayout>