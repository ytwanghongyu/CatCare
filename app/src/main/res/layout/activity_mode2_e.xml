<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MODE2E">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Maintain Mode"
        android:textSize="60dp"
        android:background="#8fa7ff"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/distance_btn_e"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="60dp"
            android:background="#ffb87e"
            android:text="distance sensor test"
            android:textSize="40dp" />
        <Button
            android:id="@+id/distance_sound_btn_e"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#ffb87e"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/distance_btn_e"
            android:layout_marginLeft="100dp"
            android:text="ultrasonic sensor test"
            android:textSize="40dp"

            />

        <Button
            android:id="@+id/color_btn_e"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance_btn_e"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="100dp"
            android:background="#ffb87e"
            android:text="color sensor test"
            android:textSize="40dp" />

        <Button
            android:id="@+id/temperature_btn_e"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color_btn_e"
            android:layout_marginLeft="-404dp"
            android:layout_marginTop="-76dp"
            android:layout_toRightOf="@+id/distance_sound_btn_e"
            android:background="#ffb87e"
            android:text="Temperature and humidity sensor test"
            android:textSize="30dp" />

        <Button
            android:id="@+id/servo_btn_1_e"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color_btn_e"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="200dp"
            android:background="#ffb87e"
            android:text="Servo1 test"
            android:textSize="40dp" />
        <Button
            android:id="@+id/servo_btn_2_e"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/servo_btn_1_e"
            android:layout_below="@+id/temperature_btn_e"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"
            android:background="#ffb87e"
            android:text="Servo2 test"
            android:textSize="40dp" />

        <Button
            android:id="@+id/slipway_btn_e"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/servo_btn_1_e"
            android:layout_below="@+id/temperature_btn_e"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="100dp"
            android:background="#ffb87e"
            android:text="SlipWay Test"
            android:textSize="40dp" />

    </RelativeLayout>
</LinearLayout>